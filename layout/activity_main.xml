<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/ValorA"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="NumValorA"
        android:inputType=""
        android:importantForAutofill="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColorHint="@color/blue" />

    <EditText
        android:id="@+id/ValorB"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="NumValorB"
        android:inputType="numberSigned|numberDecimal"
        android:textColorHint="@color/blue"
        android:importantForAutofill="no"
        app:layout_constraintStart_toStartOf="@+id/ValorA"
        app:layout_constraintTop_toBottomOf="@+id/ValorA" />

    <EditText
        android:id="@+id/ValorC"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="2dp"
        android:ems="10"
        android:hint="NumValorC"
        android:inputType="numberSigned|numberDecimal"
        android:importantForAutofill="no"
        android:textColorHint="@color/blue"
        app:layout_constraintEnd_toEndOf="@+id/ValorB"
        app:layout_constraintTop_toBottomOf="@+id/ValorB" />

    <TextView
        android:id="@+id/txtRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCalc" />

    <Button
        android:id="@+id/btnCalc"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="47dp"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ValorC" />
</androidx.constraintlayout.widget.ConstraintLayout>